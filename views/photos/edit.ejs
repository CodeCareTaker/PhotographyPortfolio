<% include ../partials/landingHeader %>

<div class="container">
    <div class="row">
        <h1 class="newText">Edit <%= photo.title %></h1>
        <div class="formContainer">
            <form action="/photos/<%= photo_id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <p class="newText">Title: </p><input class="form-control" type="text" name="photo[title]" value="<%= photo.title %>">
                </div>
                <div class="form-group">
                    <p class="newText">Image: </p><input class="form-control" type="text" name="photo[image]" value="<%= photo.image %>">
                </div>
                <div class="form-group">
                    <p class="newText">Camera: </p><input class="form-control" type="text" name="photo[camera]" value="<%= photo.camera %>">
                </div>
                 <div class="form-group">
                    <p class="newText">F-Stop: </p><input class="form-control" type="text" name="photo[fstop]" value="<%= photo.fStop %>">
                </div>
                 <div class="form-group">
                    <p class="newText">Exposure: </p><input class="form-control" type="text" name="photo[exposure]" value="<%= photo.exposure %>">
                </div>
                 <div class="form-group">
                    <p class="newText">ISO Speed: </p><input class="form-control" type="text" name="photo[isospeed]" value="<%= photo.isoSpeed %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/photos" class="newText">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>